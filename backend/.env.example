# Environment Variables for LensLink Backend
NODE_ENV=production
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/lenslink?retryWrites=true&w=majority

# JWT Secret (Generate a strong secret key)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random

# JWT Expiration
JWT_EXPIRES_IN=7d

# Security
BCRYPT_SALT_ROUNDS=12

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Origins (comma separated)
CORS_ORIGINS=https://lenslink.live,http://localhost:3000

# Database Configuration
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=30000

# Application Configuration
APP_NAME=LensLink
APP_VERSION=1.0.0
API_VERSION=v1
